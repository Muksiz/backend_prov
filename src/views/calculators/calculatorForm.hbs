<!-- Shows whether the form is in Add or Edit mode -->
<h1>{{mode}} Calculator</h1>

{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}

<!-- Prevent editing the OID in edit mode -->
<form method="POST" action="{{action}}" class="calculator-form">
    <label for="oid">Oid</label>
    <input
        type="number"
        id="oid"
        name="oid"
        value="{{oid}}"
        min="1"
        step="1"
        required
        {{#if isEdit}}readonly{{/if}}
    />

    <label for="manufacturer">Manufacturer</label>
    <textarea id="manufacturer" name="manufacturer" rows="2" required>{{manufacturer}}</textarea>

    <label for="grade">Grade</label>
    <input
        type="number"
        id="grade"
        name="grade"
        value="{{grade}}"
        min="0"
        max="10"
        step="1"
        required
    />

    <label for="batteryType">Battery Type</label>
    <input
        type="number"
        id="batteryType"
        name="batteryType"
        value="{{batteryType}}"
        min="1"
        max="3"
        step="1"
        required
    />

    <button type="submit">Save</button>
</form>
